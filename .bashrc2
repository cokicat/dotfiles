# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias get='sudo xbps-install -S'
alias update='sudo xbps-install -S && sudo xbps-install -u'
alias cls=clear
alias pip_activate='. /opt/pip_env/bin/activate'

export PYTHONPATH=/opt/pip_env/lib/python3.12/site-packages:/opt/pip_env/lib64/python3.12/site-packages:/usr/lib/python3.12:/usr/lib/python3.12/site-packages:/usr/lib64/python3.12:/usr/lib64/python3.12/site-packages

