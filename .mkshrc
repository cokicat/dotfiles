# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Custom PS1 with ~ instead of /home/user
set_prompt () {
	home_path=${PWD//$HOME/'~'}
	PS1='$( echo -e "╭─{ \033[31m\033[1m$USER\033[0m } at { \033[36m$home_path\033[0m }\n╰─▶ ")'
}

# Reolad prompt when you cd
cd () {
    builtin cd "$@"
    set_prompt
}

# Set prompt at start
set_prompt

# mkcd function
mkcd () {
    mkdir -p "$1" && cd "$1"
}

# source .mkshrc when no argument given
source () {
	if [ -z "$@" ]; then
		builtin source "$HOME/.mkshrc"
	else
		builtin source "$@"
	fi
}

# Some usefull aliases
alias l="ls -l"
alias ll="ls -Al"
alias la="ls -A"

alias cls=clear
alias google="ping google.com"

alias ..="cd ../"
alias ....="cd ../../"
alias ......="cd ../../../"
alias ........="cd ../../../../"

# Color aliases
alias ls="ls --color=auto"
alias grep="grep --color=auto"
